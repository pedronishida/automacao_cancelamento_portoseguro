{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "types": ["node"],
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "src/server.ts",
    "src/playwright/**/*.ts",
    "src/services/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": ["src/app", "node_modules", "dist", "src/**/*.test.ts"]
}

